export const pageQuery = graphql`
  query {
    site {
      ...site
    }
    sitePage {
      context {
        pagination {
          nextPagePath
          page
          pageCount
          pathPrefix
          previousPagePath
        }
        categories
      }
      path
    }
    allMdx {
      edges {
        node {
          excerpt(pruneLength: 300)
          id
          frontmatter {
            title
            date(formatString: "MMMM DD, YYYY")
            banner {
              childImageSharp {
                sizes(maxWidth: 720) {
                  ...GatsbyImageSharpSizes
                }
              }
            }
            slug
            categories
            keywords
          }
        }
      }
    }
  }
`;
